{
   // See https://go.microsoft.com/fwlink/?LinkId=733558
   // for the documentation about the tasks.json format
   "version": "2.0.0",
"tasks": [

    //
    // Check the .vscode/settings.json file for config values
    //
    {
        "label": "Docker Build - Node images",
        "type": "shell",        
        "command": "docker build . -f service-data-api/Dockerfile -t ${config:docker-registry}/${config:docker-repo}/data-api && docker build . -f service-frontend/Dockerfile -t ${config:docker-registry}/${config:docker-repo}/frontend",
        "windows": {
            "command": "docker build . -f service-data-api/Dockerfile -t ${config:docker-registry}/${config:docker-repo}/data-api ; docker build . -f service-frontend/Dockerfile -t ${config:docker-registry}/${config:docker-repo}/frontend"
        },
        "problemMatcher": []
    },
    {
        "label": "Docker Push - Node images",
        "type": "shell",
        "command": "docker push ${config:docker-registry}/${config:docker-repo}/data-api && docker push ${config:docker-registry}/${config:docker-repo}/frontend",
        "windows": {
            "command": "docker push ${config:docker-registry}/${config:docker-repo}/data-api ; docker push ${config:docker-registry}/${config:docker-repo}/frontend"
        },        
        "problemMatcher": []
    },

    {
        "label": "Docker Build - Orleans images",
        "type": "shell",   
        "options": {
            "cwd": "orleans"
        },   
        "command": "docker build . -f API/Dockerfile -t ${config:docker-registry}/${config:docker-repo}/orleans-api && docker build . -f Silo/Dockerfile -t ${config:docker-registry}/${config:docker-repo}/orleans-silo",
        "windows": {
            "command": "docker build . -f API/Dockerfile -t ${config:docker-registry}/${config:docker-repo}/orleans-api ; docker build . -f Silo/Dockerfile -t ${config:docker-registry}/${config:docker-repo}/orleans-silo"
        },
        "problemMatcher": []
    },
    {
        "label": "Docker Push - Orleans images",
        "type": "shell",
        "command": "docker push ${config:docker-registry}/${config:docker-repo}/orleans-api && docker push ${config:docker-registry}/${config:docker-repo}/orleans-silo",
        "windows": {
            "command": "docker push ${config:docker-registry}/${config:docker-repo}/orleans-api ; docker push ${config:docker-registry}/${config:docker-repo}/orleans-silo"
        },   
        "problemMatcher": []
    },    

    {
        "label": "Azure App Service Deploy",
        "type": "shell",
        "options": {
            "cwd": "${workspaceFolder}/etc/deploy-appsvc"
        },
        "command": "powershell.exe ./deploy-frontend.ps1 -appService ${config:appservice-site} -deployUser ${config:appservice-user}",    
        "problemMatcher": []
    },

    {
        "label": "Dotnet Build - Orleans API",
        "command": "dotnet",
        "type": "process",
        "args": [
            "build",
            "${workspaceFolder}/orleans/API/API.csproj"
        ],
        "problemMatcher": "$msCompile",
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },
    {
        "label": "Dotnet Build - Orleans Silo",
        "command": "dotnet",
        "type": "process",
        "args": [
            "build",
            "${workspaceFolder}/orleans/Silo/Silo.csproj"
        ],
        "problemMatcher": "$msCompile",
        "group": {
            "kind": "build",
            "isDefault": true
        }
    },    

    {
        "label": "Publish Orleans Project",
        "command": "dotnet",
        "type": "process",
        "args": [
            "publish",
            "${workspaceFolder}/orleans/OrleansContainer.sln",
            "-c",
            "Release",
            "-o",
            "pub"
        ],
        "problemMatcher": "$msCompile"
    }
]
}