{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "previewLocation": {
      "defaultValue": "westeurope",
      "type": "string",
      "allowedValues": [
        "westeurope",
        "westus",
        "eastus"
      ],
      "metadata": {
        "description": "During preview only available in these regions: westeurope westus & eastus"
      }
    },
    "acrName": {
      "type": "string",
      "metadata": {
        "description": "Name of ACR instance holding your images"
      }
    },
    "acrPassword": {
      "type": "string",
      "metadata": {
        "description": "Password for ACR"
      }
    },
    "dnsPrefix": {
      "type": "string",
      "defaultValue": "smilr",
      "metadata": {
        "description": "Prefix for container DNS labels, change to ensure global DNS uniqueness"
      }      
    }
  },
  "variables": {
    "containerFrontend": "smilr-frontend",
    "containerDataApi": "smilr-data",
    "imageFrontend": "[concat(parameters('acrName'), '.azurecr.io/smilr/frontend')]",
    "imageDataApi": "[concat(parameters('acrName'), '.azurecr.io/smilr/data-api')]",
    "imageMongo": "mongo:3.4-jessie",
    "memory": 1.0,
    "cpu": 1.0,
    "dnsLabelFrontend": "[concat(parameters('dnsPrefix'), '-frontend')]",
    "dnsLabelDataApi": "[concat(parameters('dnsPrefix'), '-api')]"
  },
  "resources": [
    {
      "name": "[variables('containerDataApi')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-02-01-preview",
      "location": "[parameters('previewLocation')]",
      "properties": {
        "containers": [
          {
            "name": "[concat(variables('containerDataApi'), '-api')]",
            "properties": {
              "image": "[variables('imageDataApi')]",
              "ports": [
                {
                  "port": "80"
                }
              ],              
              "resources": {
                "requests": {
                  "cpu": "[variables('cpu')]",
                  "memoryInGb": "[variables('memory')]"
                }
              },
              "environmentVariables": [
                {
                  "name": "MONGO_CONNSTR",
                  "value": "mongodb://localhost"
                },
                {
                  "name": "PORT",
                  "value": "80"
                }                
              ]
            }
          },
          {
            "name": "[concat(variables('containerDataApi'), '-mongo')]",
            "properties": {
              "image": "[variables('imageMongo')]",
              "resources": {
                "requests": {
                  "cpu": "[variables('cpu')]",
                  "memoryInGb": "[variables('memory')]"
                }
              }
            }
          }          
        ],
        "imageRegistryCredentials": [{
          "server": "[concat(parameters('acrName'), '.azurecr.io')]",
          "username": "[parameters('acrName')]",
          "password": "[parameters('acrPassword')]"
        }],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[variables('dnsLabelDataApi')]",
          "ports": [
            {
              "protocol": "tcp",
              "port": "80"
            }
          ]            
        }
      }
    },
    {
      "name": "[variables('containerFrontend')]",
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2018-02-01-preview",
      "location": "[parameters('previewLocation')]",
      "properties": {
        "containers": [
          {
            "name": "[variables('containerFrontend')]",
            "properties": {
              "image": "[variables('imageFrontend')]",
              "ports": [
                {
                  "port": "80"
                }
              ],              
              "resources": {
                "requests": {
                  "cpu": "[variables('cpu')]",
                  "memoryInGb": "[variables('memory')]"
                }
              },
              "environmentVariables": [
                {
                  "name": "API_ENDPOINT",
                  "value": "[concat('http://', variables('dnsLabelDataApi'), '.', parameters('previewLocation'), '.azurecontainer.io/api')]"
                },
                {
                  "name": "PORT",
                  "value": "80"
                }                
              ]
            }
          }
        ],
        "imageRegistryCredentials": [{
          "server": "[concat(parameters('acrName'), '.azurecr.io')]",
          "username": "[parameters('acrName')]",
          "password": "[parameters('acrPassword')]"
        }],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "dnsNameLabel": "[variables('dnsLabelFrontend')]",
          "ports": [
            {
              "protocol": "tcp",
              "port": "80"
            }
          ]          
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.ContainerInstance/containerGroups', variables('containerDataApi'))]"
      ]
    }
  ],
  "outputs": {
    "frontendURL": {
      "value": "[concat('http://', variables('dnsLabelFrontend'), '.', parameters('previewLocation'), '.azurecontainer.io')]",
      "type": "string"
    },
    "apiURL": {
      "value": "[concat('http://', variables('dnsLabelDataApi'), '.', parameters('previewLocation'), '.azurecontainer.io/api')]",
      "type": "string"
    }
  }
}